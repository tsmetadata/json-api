{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsmetadata/polyfill/lib/tsconfig.polyfill.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./lib"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
