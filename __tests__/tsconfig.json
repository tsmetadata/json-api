{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsmetadata/polyfill/lib/tsconfig.polyfill.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["./**/*.ts"]
}
